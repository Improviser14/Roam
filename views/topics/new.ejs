<% include ../partials/header %>

<div class="container">
   <div class="row">
   <h1 style="text-align: center;">Start a new thread</h1>
      <div style="width: 30%; margin: 30px auto;">
         <form action="/topics" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <input class="form-control" type="text" name="topic[name]" placeholder="topic name"> 
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" id="image" name="image" accept="image/*" required> 
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="topic[description]" placeholder="description"> 
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-info btn-block">Submit</button>
            </div>
         </form>
            <div class="form-group">
             <a class="btn btn-lg btn-info btn-block" href="/topics">Go Back</a>
            </div>
         </div>
      </div>
   </div>
</div>

<% include ../partials/footer %>