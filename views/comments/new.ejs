<% include ../partials/header %>

<div class="container">
   <div class="row">
    <h1 style="text-align: center">Add a new comment to <%= topic.name %></h1>
      <div style="width: 30%; margin: 30px auto;">
         <form action="/topics/<%= topic._id %>/comments" method="POST">
            <div class="form-group">
              <input class="form-control" type="text" name="comment[text]" placeholder="text"> 
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-info btn-block">Submit</button>
            </div>
         </form>
            <div class="form-group">
             <a class="btn btn-lg btn-info btn-block" href="/topics/<%= topic._id %>">Go Back</a>
            </div>
         </div>
      </div>
   </div>
</div>

<% include ../partials/footer %>